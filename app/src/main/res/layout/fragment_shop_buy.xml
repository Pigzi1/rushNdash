<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShopFragments.ShopBuyFragment"
    android:background="@drawable/border_screen">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/go_back"
        android:id="@+id/ibBack"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/info"
        android:layout_gravity="end"
        android:id="@+id/ibInfo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:text="@string/buy"
            android:fontFamily="@font/ahronbd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="You have: coins"
            android:fontFamily="@font/franklin"
             android:id="@+id/tvCoins"/>
         <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvShop"/>
    </LinearLayout>

</FrameLayout>