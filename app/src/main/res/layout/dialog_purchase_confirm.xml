<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_screen"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/confirm_purchase"
        android:textSize="30sp"
        android:fontFamily="@font/berlin_sans_fb_demi_bold"
        android:textColor="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:id="@+id/ivProduct"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Buy item for 100 coins??"
                android:fontFamily="@font/franklin"
                android:id="@+id/tvDisplay"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_black"
                    android:text="Close"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ahronbd"
                    android:textSize="13sp"
                    android:id="@+id/btReturn"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_black"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ahronbd"
                    android:textSize="13sp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/btConfirm"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>