<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border_screen"
    tools:context=".activities.OptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/options_title"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:fontFamily="@font/franklin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Music"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/franklin"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/switchMusic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Sound Effects:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/franklin"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/switchSoundEffects"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Show FPS counter in-game:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/franklin"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/switchFPS"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_black"
        android:text="save"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/franklin"
        android:id="@+id/btSave"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:background="@drawable/button_black"
        android:text="go back"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/franklin"
        android:id="@+id/btBack"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="end|bottom"
        android:gravity="center_vertical"
        android:layout_margin="15dp"
        android:background="@drawable/button_red"
        android:text="Reset Data"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/franklin"
        android:id="@+id/btReset"/>

</FrameLayout>