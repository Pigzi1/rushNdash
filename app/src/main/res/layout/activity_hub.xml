<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HubActivity"
    android:orientation="vertical"
    android:background="@drawable/border_screen">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/game_logo"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_black"
        android:backgroundTint="@null"
        android:text="Play"
        android:textColor="@color/white"
        android:fontFamily="@font/ahronbd"
        android:textSize="50sp"
        android:id="@+id/btPlay"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/button_black"
            android:text="Options"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/btOptions"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/button_black"
            android:text="Shop"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:id="@+id/btShop"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/button_black"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/btSignOut"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/button_black"
            android:text="Rankings"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:id="@+id/btRankings"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="Logged in as: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/tvUserNameDisplay"/>

</LinearLayout>